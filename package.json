{
  "name": "aplan-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:admin": "pnpm --filter admin dev",
    "dev:staff": "pnpm --filter @apex/staff dev",
    "dev:info": "pnpm --filter @apex/info dev",
