{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@apex/config": ["../../packages/config/src/index.ts"],
      "@apex/config/*": ["../../packages/config/src/*"],
      "@apex/auth": ["../../packages/auth/src"],
      "@apex/auth/*": ["../../packages/auth/src/*"],
      "@apex/ui/*": ["../../packages/ui/*"],
      "@apex/utils": ["../../packages/utils/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
